<%= form_with model: @feedback, local: true do |f| %>
  <%= render 'shared/errors', resource: @feedback %>

  <div class="form-group col-4">
    <%= f.label :message %><br />
    <%= f.text_area :message, class: "form-control", autofocus: true %>
  </div>

  <div class="form-group col-4">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
